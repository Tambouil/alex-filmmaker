<div class="text-center py-40 md:py-60 px-4 md:px-6">
  <h1 class="text-black text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl uppercase" aria-label="Alex Berceaux">
    <span aria-hidden="true" class="inline-flex flex-wrap justify-center items-baseline">
      {
        ['Alex', 'Berceaux'].map((word, wordIndex) => (
          <>
            <span class="inline-block whitespace-nowrap">
              {word.split('').map((char, charIndex) => (
                <span
                  class="inline-block opacity-0 animate-fadeInUp"
                  style={`animation-delay: ${(charIndex + wordIndex * 'Alex'.length) * 50}ms;`}
                >
                  {char}
                </span>
              ))}
            </span>
            {wordIndex === 0 && <span class="inline-block w-4 sm:w-6 md:w-8">&nbsp;</span>}
          </>
        ))
      }
    </span>
  </h1>

  <h2 class="m-auto max-w-sm md:max-w-md mt-5 md:mt-8 text-lg md:text-xl opacity-0 animate-fadeInUpDelayed">
    Chargé de production et de post-production pour des films de haute qualité.
  </h2>
</div>
